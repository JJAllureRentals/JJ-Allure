<script>
function showSuccessMessage(event) {
  event.preventDefault();
  const form = event.target;
  const data = new FormData(form);
  fetch(form.action, {
    method: form.method,
    body: data,
    headers: {
      'Accept': 'application/json'
    }
  }).then(response => {
    if (response.ok) {
      document.getElementById('success-message').style.display = 'block';
      form.reset();
    }
  });
}
</script>
